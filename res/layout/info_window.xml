<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#ffffffff">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_text" android:layout_gravity="center_horizontal" android:textColor="#ff000000"
            android:textSize="20dp"/>
    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ff000000">
    </View>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_text" android:layout_gravity="center_horizontal" android:textColor="#ff000000"/>
</LinearLayout>